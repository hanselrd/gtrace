{
  "name": "trace",
  "version": "1.0.0",
  "description": "",
  "main": "server/src/index.ts",
  "scripts": {
    "start": "ts-node -r dotenv/config server/src/index.ts dotenv_config_path=server/.env.dev",
    "test-server": "ts-node -r dotenv/config server/src/index.ts dotenv_config_path=server/.env.test",
    "clean": "rm -rf build",
    "build:server": "tsc && cp -R server/src/graphql/types/*.graphql build/graphql/types",
    "build:client": "cd client && npm run build",
    "build": "npm run clean && npm run build:server && npm run build:client && cp -R client/build build/client",
    "preinstall": "cd client && npm install",
    "postinstall": "npm run build",
    "test": "jest",
    "watch": "nodemon --exec ts-node -r dotenv/config server/src/index.ts dotenv_config_path=server/.env.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/hanselrd/trace.git"
  },
  "author": "Hansel De La Cruz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hanselrd/trace/issues"
  },
  "homepage": "https://github.com/hanselrd/trace#readme",
  "dependencies": {
    "apollo-errors": "^1.7.1",
    "bcrypt": "^1.0.3",
    "class-validator": "^0.8.1",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "graphql-iso-date": "^3.5.0",
    "graphql-type-json": "^0.1.4",
    "graphql-yoga": "^1.5.1",
    "jsonwebtoken": "^8.2.0",
    "merge-graphql-schemas": "^1.5.0",
    "pg": "^7.4.1",
    "pg-hstore": "^2.3.2",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.1.16",
    "typescript": "^2.7.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/jsonwebtoken": "^7.2.5",
    "@types/node": "^9.4.7",
    "axios": "^0.18.0",
    "jest": "^22.4.2",
    "nodemon": "^1.17.1",
    "ts-node": "^5.0.1"
  }
}
